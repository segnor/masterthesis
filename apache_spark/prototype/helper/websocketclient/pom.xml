	    <groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-install-plugin</artifactId>
		<executions>
		  <execution>
		    <id>install-jar-lib-local</id>
			<phase>validate</phase>
			<goals>
			  <goal>install-file</goal>
			</goals>
